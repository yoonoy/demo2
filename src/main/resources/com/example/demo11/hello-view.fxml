<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="HelloController"
          hgap="10" vgap="10" alignment="center">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Weight Input -->
    <Label text="Weight:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="weightInput" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Enter weight"/>

    <!-- Height Input -->
    <Label text="Height:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="heightInput" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Enter height"/>

    <!-- BMI Result Label -->
    <Label fx:id="bmiResult" text="Your BMI" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-font-weight: bold"/>
</GridPane>
